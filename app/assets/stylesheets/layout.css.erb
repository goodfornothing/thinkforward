@media all {

	body { 
		background: #ffffff;
	}
   
	.container {
		width: 940px; margin: 0 auto; 
	  overflow: hidden; display: block;
	}
	
	/* =header */
	
		header.container {
			background: url(<%= asset_path "branding/evolve_yourself.gif" %>) top right no-repeat;
			height: 245px;
			margin-bottom: 40px;
			position: relative;
		}
		
		header h1 {
			position: absolute;
			bottom: 56px;
			font-size: 34px;
		}
		
		header h1 a:hover,
		header h1 a:active,
		header h1 a:focus {
			color: #666666;
			text-decoration: none;
		}
		
		header h1 span:before {
			content: "â†’";
			display: inline-block;
			padding-right: 6px;
		}
		
		header h1 span {
			font-size: 18px;
			color: #666666;
			display: inline-block;
			padding-left: 0px;
		}
		
	/* =footer */
	
		footer {
			background: #CCCCCC;
			color: #ffffff;
		}
		
		footer p {
			font-size: 11px;
			text-align: right;
			margin: 0;
			padding: 10px 20px;
		}
	
}
