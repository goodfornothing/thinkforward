body { 
	font-family: "helvetica neue", Helvetica, Arial, sans-serif; 
	color: #666666;
	-webkit-font-smoothing: antialiased;
}

::selection { background: #FFD300; color: #ffffff; }
::-moz-selection { background: #FFD300; color: #ffffff; }
::-webkit-selection { background: #FFD300; color: #ffffff; }

/* =h1 */

  h1 { 
    font-size: 34px; 
		font-weight: normal;
		color: #FFD300;
		line-height: 38px;
  }

/* =h2 */

  h2 { 
		font-size: 22px; 
		line-height: 28px;
		margin-bottom: 26px;
		font-weight: normal;
		color: #666666;
  }

/* =h3 */

  h3 { 
		margin-bottom: 18px;
		font-size: 18px;
		line-height: 26px;
		font-weight: normal;
		color: #FFD300;
  }

/* =p */

  p { 
    font-size: 14px;
    line-height: 21px; 
    margin-bottom: 20px;
  }

/* =a */

  a { color: #FFD300; text-decoration: none; }
  a:hover, a:focus, a:active { text-decoration: underline; }

/* =ul,ol,dl */

  ul, dl, ol { padding: 0.25em 2em 1.5em 1em; list-style-position: inside; }
  dl, ul { list-style-type: disc; }
  ol { list-style-type: decimal; }

  ol li ol, ol li ul, ul li ul, ul li ol
  { font-size: 1em; padding: 0.8em 0em 0em 1em; }

/* =li */

  li { font-size: 13px; line-height: 14px; padding-bottom: 4px; }

/* =time */

	time { 
		font-size: 12px; 
		line-height: 12px; 
		display: block; 
		margin-bottom: 16px;
		font-style: italic;
	}
	
/* iframe */

	iframe {
		display: block;
		position: relative;
		top: 1px;
	}
