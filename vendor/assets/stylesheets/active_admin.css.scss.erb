body.active_admin #footer p { display: none; }

body.active_admin .choices-group {
	moz-column-count: 3;
	-moz-column-gap: 20px;
	-webkit-column-count: 3;
	-webkit-column-gap: 20px;
	column-count: 3;
	column-gap: 20px;
}

body.active_admin form .just_datetime_picker input[type="text"] {
	width: auto;
}

body.active_admin form .has_many {
	padding-top: 0 !important;
}

body.active_admin form .has_many > a.button {
	margin-top: 20px;
}

body.active_admin form .has_many h3 {
	display: none;
}

body.active_admin form .has_many {
	padding-left: 30px !important;
	padding-right: 30px !important;
}

body.active_admin .table_tools {
margin-bottom:0
}

body.active_admin .table_tools > * {
	margin-bottom: 14px;
}

body.active_admin form .has_many fieldset {
	border: none;
	box-shadow: 0 0 0;
	margin-bottom: 5px;
}

body.active_admin form .has_many.slots fieldset input, 
body.active_admin form .has_many.slots fieldset select {
	display: inline-block;
	width: 100px;
}

body.active_admin form .has_many.slots fieldset select {
	margin-top: 5px;
}

body.active_admin form .has_many.slots fieldset label {
	display: inline-block;
	padding-right: 15px;
	width: auto;
	line-height: 28px;
}

body.active_admin form .has_many.slots fieldset li {
	float: left;
	width: auto;
	padding: 0 40px 0 0;
}

body.active_admin .sidebar_section > div {
	padding-top: 6px;
}

body.active_admin .sidebar_section > div p {
	line-height: 20px;
}

body.active_admin .sidebar_section > div p:last-child {
	margin-bottom: 0;
}

body.active_admin .sidebar_section .attributes_table th { 
	width: auto;
}

body.active_admin .status_tag.active {
	background: #8DAA92;
}

body.active_admin #title_bar #titlebar_left {
	width: 70%;
	display: inline-block;
	float: left;
	padding-bottom: 10px;
	padding-top: 5px;
	height: auto;
}

body.active_admin #title_bar #titlebar_right {
	display: inline-block;
	float: right;
	padding: 20px 0 0;
}

body.active_admin #title_bar #titlebar_left h2 {
	line-height: 115%;
}

body.active_admin .blank_slate_container .blank_slate {
	margin-top: 20px;
	margin-bottom: 15px;
}

body.active_admin table.index_table th:last-child {
	min-width: 100px;
}