/* To make nice with ActiveAdmin */

body.active_admin form .sir-trevor {
	width: 640px;
	margin: 20px auto 20px;
	background: #ffffff;
}

body.active_admin form .sir-trevor .buttons { 
	margin-top: 0;
}

body.active_admin .sir-trevor-blocks {
	padding: 40px 0;
}

body.active_admin form .sir-trevor .buttons a.button { 
	
	box-shadow: 0;
	border: 0;
	-moz-box-shadow: 0 0 0;
	-webkit-box-shadow: 0 0 0;
	text-shadow: 0 0 0;
	-webkit-text-shadow: 0 0 0;
	-moz-text-shadow: 0 0 0;
	border-radius: 0;
	-webkit-border-radius: 0;
	-moz-border-radius: 0;
	font-weight: normal;

	padding: 27px 13px 8px;
  margin: 0;
  border-left: 1px dotted #DAC962;
  color: #AF9B24;
  height: 45px;
  font-size: 9px;
  display: inline-block;
  text-decoration: none;

	background-color: transparent;
  background-repeat: no-repeat;
  background-position: center 9px;
	
}

body.active_admin form .sir-trevor .buttons a.button:active {
	box-shadow: 0 0 0 !important;
	-webkit-box-shadow: 0 0 0 !important;
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a:hover {
	background: transparent;
  background-repeat: no-repeat;
  background-position: center 9px;
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-block-quote:hover {
  background-image: url(<%= asset_path "sir-trevor/icons/block_editor_blockquote.png" %>);
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-image:hover,
body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-gallery:hover {
  background-image: url(<%= asset_path "sir-trevor/icons/block_editor_image.png" %>);
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-text:hover,
body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-heading,
body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-heading:hover  {
  background-image: url(<%= asset_path "sir-trevor/icons/block_editor_text.png" %>);
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-list:hover {
  background-image: url(<%= asset_path "sir-trevor/icons/block_editor_list.png" %>);
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-tweet:hover {
  background-image: url(<%= asset_path "sir-trevor/icons/block_editor_tweet.png" %>);
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a.new-video:hover {
  background-image: url(<%= asset_path "sir-trevor/icons/block_editor_video.png" %>);
}

body.active_admin .sir-trevor .sir-trevor-marker .buttons a:last-child {
  border-right: 1px dotted #DAC962;
}

body.active_admin .sir-trevor .sir-trevor-block blockquote {
	padding: 0;
	min-height: 40px;
}

body.active_admin .sir-trevor .sir-trevor-block .dropzone p {
	margin-bottom: 15px;
	font-size: 16px;
}

.sir-trevor-block .heading-block textarea {
	min-height: 0;
	font-size: 22px;
	color: #222222;
}

.sir-trevor-block .heading-block textarea:focus {
	border: none !important;
	-webkit-box-shadow: 0 0 0 !important;
	margin: 1px 0 0 1px;
}

.sir-trevor .heading-block .expanding-textarea {
	min-height: 43px;
}

body.active_admin .sir-trevor ul {
	list-style-type: disc;
}